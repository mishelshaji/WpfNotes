<Window x:Class="DispatcherTimerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DispatcherTimerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock 
            x:Name="TxtClock"
            TextAlignment="Right"
            FontSize="30"
            Foreground="Crimson"></TextBlock>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnStart" Click="BtnStart_OnClick">Start</Button>
            <Button x:Name="BtnStop" Click="BtnStop_OnClick">Stop</Button>
        </StackPanel>
    </StackPanel>
</Window>
