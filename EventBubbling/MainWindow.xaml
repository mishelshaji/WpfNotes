<Window x:Class="EventBubbling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventBubbling"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel ButtonBase.Click="StackPanelButtonBase_OnClick">
        <Border ButtonBase.Click="BorderButtonBase_OnClick">
            <Button Click="Button_OnClick">Click Me</Button>
        </Border>
    </StackPanel>
</Window>
