<Window x:Class="AsynchronousTasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsynchronousTasks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label>Enter a number</Label>
        <TextBox x:Name="TxtLimit" Text="5"></TextBox>
        <Label>Result will take few seconds to appear.</Label>
        <TextBlock x:Name="Result"></TextBlock>
        <Button Click="ButtonBase_OnClick">Calculate</Button>
    </StackPanel>
</Window>
