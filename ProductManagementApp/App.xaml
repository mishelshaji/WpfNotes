<Application x:Class="ProductManagementApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProductManagementApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="Resources/Colors.xaml"></ResourceDictionary>
                 <ResourceDictionary Source="Resources/Sizes.xaml"></ResourceDictionary>
                 <ResourceDictionary Source="Resources/Templates.xaml"></ResourceDictionary>
                 <ResourceDictionary Source="Resources/Typography.xaml"></ResourceDictionary>
             </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
    </Application.Resources>
</Application>
